{% extends 'base.html.twig' %}

{% block title %}Affichage des séjours{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table{ border-collapse: collapse; table-layout: fixed; width: 1000px; }
    td,th { border: 1px solid black; text-align: center; vertical-align: middle; }

</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}</h1>

    {% if sejours|length >0 %}
        <table>
            <caption>Nombre de séjours actuels: {{sejours|length}}</caption>
            <tr>
        	   <th> Id </th>
        	   <th> Numero de chambre </th>
        	   <th> Nom du patient </th>
        	   <th> Date d'arrivée </th>
        	   <th> Date de départ </th>
        	   <th> Commentaire </th>
            </tr>
            {% for sejour in sejours %}
            <tr>
            	<td>{{sejour.id}}</td>
            	<td>{{sejour.getNumChambre.getId}}</td>
            	<td>{{sejour.getNumPatient.getNom}}</td>
            	<td>{{sejour.getDateArrivee|date("d/m/Y")}}</td>
            	<td>{% if sejour.getDateDepart() is null %} {% else %} {{sejour.getDateDepart|date("d/m/Y")}} {% endif %}</td>
            	<td>{% if sejour.getCommentaire() is null %} {% else %} {{sejour.commentaire}} {% endif %}</td>
            </tr>
        
            {% else %}	
    		  Pas de séjour trouvé.
            {% endfor %}
        </table><br>
    {% else %}  
        Pas de séjour trouvé. 
    {% endif %}   
</div>
{% endblock %}